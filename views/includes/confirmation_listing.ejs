   <br>
<% if (success && success.length > 0) { %>
  <% success.forEach(msg => { %>
    <div 
      class="mb-4 flex items-center justify-between bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded" 
      role="alert"
    >
      <div class="flex items-center">
        <!-- You can include an icon here if you like -->
        <svg class="w-5 h-5 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 10-1.414 1.414L9 13.414l4.707-4.707z" clip-rule="evenodd" />
        </svg>
        <span><%= msg %></span>
      </div>
      <button type="button" class="text-green-500 hover:text-green-700" onclick="this.parentElement.style.display='none'">
        &times;
      </button>
    </div>
  <% }) %>
<% } %>

<% if (error && error.length > 0) { %>
  <% error.forEach(msg => { %>
    <div 
      class="mb-4 flex items-center justify-between bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded" 
      role="alert"
    >
      <div class="flex items-center">
        <!-- Icon for error -->
        <svg class="w-5 h-5 mr-2 text-red-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm-1-9V7a1 1 0 112 0v2a1 1 0 11-2 0zm0 4a1 1 0 102 0 1 1 0 00-2 0z" clip-rule="evenodd" />
        </svg>
        <span><%= msg %></span>
      </div>
      <button type="button" class="text-red-500 hover:text-red-700" onclick="this.parentElement.style.display='none'">
        &times;
      </button>
    </div>
  <% }) %>
<% } %>
