<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Navbar</title>
  <link rel="stylesheet" href="/styles/style.css" />
</head>
<body class="h-screen p-2" > <!-- add top padding so content isnâ€™t hidden under fixed nav -->
  <nav class="bg-white shadow-md fixed top-0 left-0 w-full z-50 h-16">
    <div class=" h-16 container mx-auto px-4 py-2 flex items-center justify-between">
      <!-- Logo + Home -->
      <div class="flex items-center">
        <img src="/images/paper-plane.png" alt="Compass Icon" class="h-6 w-6 mr-2">
        <a href="#" class="text-gray-800 font-semibold">Home</a>
      </div>
      
      <!-- Desktop Links -->
      <div class="hidden md:flex space-x-4">
        <a href="/listings" class="text-gray-800 hover:text-gray-600">All Listings</a>
        <a href="/listings/new" class="text-gray-800 hover:text-gray-600">Add New Listing</a>
        <a href="/user/signup" class="text-gray-800 hover:text-gray-600">Sign up/Login</a>
        <a href="/user/logout" class="text-gray-800 hover:text-gray-600">Logout</a>
      </div>

      <!-- Hamburger for Mobile -->
      <div class="md:hidden">
        <button id="menu-btn" class="text-gray-800 focus:outline-none" aria-label="Toggle menu">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
      <a href="/listings" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">All Listings</a>
      <a href="/listings/new" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Add New Listing</a>
      <a href="/user/signup" class="block px-4 py-2 text-gray-800 hover:bg-gray-100">Sign up</a>
    </div>
  </nav>

  <script>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    if (menuBtn) {
      menuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  </script>
  <!-- Page content here -->
</body>
</html>
