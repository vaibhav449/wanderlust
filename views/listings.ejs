<% layout("/layouts/boilerplate") %>

<body class="bg-gray-100 dark:bg-gray-900">

  <div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-semibold text-gray-800 dark:text-gray-100 mb-6">All Listings</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% for (let listing of allListings) { %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
        <a href="/listings/<%= listing._id %>">
          <img
            src="<%= listing.image %>"
            alt="<%= listing.name %>"
            class="w-full h-48 object-cover rounded-t-lg"
          >
        </a>
        <div class="p-4">
          <h2 class="text-lg font-medium text-gray-800 dark:text-gray-100 mb-2">
            <%= listing.name %>
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Price: $<%= listing.price %>
          </p>

        </div>
      </div>
      <% } %>
    </div>

    <div class="mt-6">
      <a
        href="/listings/new"
        class="inline-block px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-900 transition"
      >
        Add New Listing
      </a>
    </div>
  </div>
</body>
